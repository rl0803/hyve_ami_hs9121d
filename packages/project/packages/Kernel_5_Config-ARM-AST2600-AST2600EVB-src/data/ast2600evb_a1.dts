    kcs_addr = <0xCA0>;
    status = "okay";
};

&kcs2 {
    kcs_addr = <0xCA8>;
    status = "okay";
};

&kcs3 {
    kcs_addr = <0xCA2>;
    status = "okay";
};

&jtag0 {
    status = "okay";
};

&jtag1 {
    status = "okay";
};

&mctp0 {
    tx-payload-bytes= <64>;
    rx-payload-bytes= <64>;
    status = "okay";
};

&espi_ctrl {
    status = "okay";
    
    perif,memcyc-src-addr = <0x98000000>;
    perif,memcyc-size = <0x10000>;
    perif,dma-mode;
    
    oob,dma-mode;
    oob,dma-tx-desc-num = <0x2>;
    oob,dma-rx-desc-num = <0x8>;
    
    flash,dma-mode;
    flash,safs-mode = <0x2>;
};

&lpc_reset {
    status = "okay";
};

&lpc_sio {
    status = "okay";
};

&lpc_snoop {
    snoop-ports = <0x80>;
    status = "okay";
};

&lpc_pcc { 
    rec-mode = <0x1>; 
    port-addr = <0x80>; 
    port-addr-hbits-select = <0x1>; 
    port-addr-xbits = <0x1>; 
    pattern-a-en; 
    pattern-a = <0x41424344>; 
    pattern-a-len = <0x4>; 
    pattern-a-write = <0x1>; 
    pattern-a-port = <0x80>; 
    status = "okay"; 
};

