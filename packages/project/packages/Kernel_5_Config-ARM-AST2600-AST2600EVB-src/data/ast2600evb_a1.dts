// MAC3 (Dedicated NIC)
&mac2 {
    status = "okay";

    phy-mode = "rgmii";
    phy-handle = <&ethphy2>;
    
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_rgmii3_default>;
};
// MAC4 (Shared NIC)
&mac3 {
    status = "okay";

    phy-handle = <&ethphy3>;
    pinctrl-names = "default";

#if 0 //currently using AST EVB, so disable NCSI
    phy-mode = "rgmii";
    pinctrl-0 = <&pinctrl_rgmii4_default>;

#else
    phy-mode = "rmii";
    use-ncsi;
    pinctrl-0 = <&pinctrl_rmii4_default>;
#endif
};

