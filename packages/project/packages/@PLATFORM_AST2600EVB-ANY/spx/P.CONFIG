config FEATURE_^AST2600EVB^_LAN_AND_DRAM_TEST_CMD
	bool "LAN and DRAM test tool in U-boot"
	default n
	help
	    Enable/Disable to add hardware test tool in uboot.

config FEATURE_GLOBAL_^AST2600EVB^_SD_SLOT_COUNT
	int "Number of SD Slots"
	default 1
	range 0 1
	help
	     Specify the number of SD slots

#config FEATURE_GLOBAL_^AST2600EVB^_EMMC_FLASH_COUNT
#	int "Number of eMMC Flash"
#	default 0
#	range 0 1
#	help
#	    Specify the number of eMMC Flash

config FEATURE_AST2600EVB_PLATFORM_SUPPORT
	string "AST2600EVB Platfrom Support"
	help
		Specify platform as AST2600EVB.

endmenu

endif
